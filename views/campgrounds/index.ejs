<% include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp</h1>
            <p>Hand picked campgrounds</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campgrounds</a>
            </p>
        </div>

    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our most popular campgrounds</h3>
        </div>
    </div>
    <div class="row text-center">

        <% campgrounds.forEach(function(campSites){%>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img class="img-thumbnail img-fluid" src="<%=campSites.image%>">
                <div class="figure-caption">
                    <h4><%=campSites.name%></h4>
                </div>
                <div>
                    <p>
                        <a href="/campgrounds/<%= campSites._id%>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        </div>
        <%})%>
    </div>
</div>

<% include ../partials/footer %>